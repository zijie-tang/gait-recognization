<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F3F3"
    tools:context="com.example.Activity.PrivilegeActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/back"
        android:drawableRight="@drawable/blank"
        android:gravity="center|center_vertical"
        android:text="权 限"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/location"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="102dp"
        android:layout_marginRight="0dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/right2"
        android:gravity="left|center_vertical"
        android:text="  允许访问位置权限"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/camera"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="0dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/right2"
        android:gravity="left|center_vertical"
        android:text="  允许访问相机权限"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/photo"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="258dp"
        android:layout_marginRight="0dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/right2"
        android:gravity="left|center_vertical"
        android:text="  允许访问相册权限"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/microphone"
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="332dp"
        android:layout_marginRight="0dp"
        android:background="#ffffff"
        android:drawableRight="@drawable/right2"
        android:gravity="left|center_vertical"
        android:text="  允许访问麦克风权限"
        android:textColor="@color/black"
        android:textSize="22sp" />

</RelativeLayout>